<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="product_price_view" model="ir.ui.view">
            <field name="name">Update Product Price</field>
            <field name="model">product.price</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="update_type"/>
                            <label for="percentage"/>
                            <div class="o_row" name="percentage">
                                <field name="percentage" required="1"/>
                                <span>%</span>
                            </div>
                        </group>
                        <group>
                            <field name="product_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('update_type', '!=', 'product')],'required': [('update_type', '=', 'product')]}"/>
                            <field name="categ_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('update_type', '!=', 'category')],'required': [('update_type', '=', 'category')]}"/>
                            <field name="shipment_ids" widget="many2many_tags"/>

                        </group>
                    </group>
                    <footer>
                        <button name="change_product_price" type="object" string="Update Price" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="product_price_view_action" model="ir.actions.act_window">
            <field name="name">Update Product Price</field>
            <field name="res_model">product.price</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_price_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_product_price"
                  name="Update Price"
                  parent="sale.product_menu_catalog"
                  action="product_price_view_action"
                  groups="sale_fadil.group_product_price_update"
                  sequence="22"/>


    </data>
</odoo>