<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="roh_view_account_payment_form_inherited_ids" model="ir.ui.view">
        <field name="name">account.payment.form.roh</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='ref']" position="after">
                <field name="description" />
            </xpath>
             <xpath expr="//field[@name='date']" position="before">
                                        <field name="amount_arabic_word"/>

                </xpath>

        </field>
    </record>

    <record model="ir.ui.view" id="roh_view_account_reg_payment_form">
        <field name="name">view.account.reg.payment.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">

                <xpath expr="//field[@name='communication']" position="after">
                    <field name="description"/>
                </xpath>
        </field>
    </record>
</odoo>