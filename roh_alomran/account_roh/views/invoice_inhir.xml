<!--             <span t-esc="o.company_id.name"   />-->
<!--         </div>-->
<!--                </xpath>-->
        <xpath expr="//p[@name='payment_communication']" position="replace">
            <p></p>
        </xpath>
        <xpath expr="//t[2]" position="replace">
               <t>
                         <span t-esc="o.company_id.name"   />
               </t>



        </xpath>
                <xpath expr="//div[hasclass('page')]/div/div[@name= 'due_date']" position="replace">
                    <div class="col-auto col-3 mw-100 mb-2" >
                                                    <strong>رقم الفاتورة</strong>

                              <span t-if="o.name != '/'" t-field="o.name"/>
                        </div>

                </xpath>
                <xpath expr="//div[hasclass('page')]/div/div[1]" position="before">
                     <div class="col-auto col-3 mw-100 mb-2" >
                            <strong>اسم العميل</strong>
                            <p class="m-0" t-field="o.partner_id.name"/>
                        </div>
                </xpath>
                <xpath expr="//div[hasclass('page')]/div" position="after">
<!--                    <div    style="font-size:20px;"  t-attf-class="text-center">-->

<!--             <span t-esc="o.company_id.name"   />-->
<!--         </div>-->

                <div id="info" class="row mt-4 mb-4">

                     <div class="col-auto col-3 mw-100 mb-2" >
                            <strong>السجل التجاري</strong>
                            <p class="m-0" t-field="o.company_id.company_registry"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2">
                            <strong>الرقم الضريبي</strong>
                            <p class="m-0" t-field="o.company_id.vat"/>
                        </div>

                </div>
                </xpath>
    </template>
</odoo>


