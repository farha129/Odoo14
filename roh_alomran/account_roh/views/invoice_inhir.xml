<odoo>
    <template id="invoice_document_report_inherit_roh" inherit_id="era_tax_partner.invoice_document_report_inherit">
     <xpath expr="//div[hasclass('page')]" position="attributes">
            <attribute name="t-attf-style">color: black;background-image:url(&quot;/sale_roh/static/description/imgg.jpeg &quot;); background-size:200mm 200mm;font-family: Arial;</attribute>

        </xpath>
<!--                <xpath expr="//div[hasclass('page')]/div" position="before">-->
