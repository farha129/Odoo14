<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

         <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_base_document_layout_header_engform" model="ir.ui.view">
            <field name="name">view.inherit.base.document.layout.form</field>
            <field name="model">base.document.layout</field>
            <field name="inherit_id" ref="web.view_base_document_layout"/>
            <field name="arch" type="xml">
            
                            <xpath expr="//field[@name='report_header']" position="replace">
 <field name="report_header" placeholder="e.g. Global Business Solutions" />
                             </xpath>

                <xpath expr="//field[@name='report_header']" position="after">
                    <field name="report_header_english"/>
                </xpath>

            </field>
        </record>

        <record id="view_res_company_form_inherit_header_eng" model="ir.ui.view">
            <field name="name">view.res.company.form.inherit.logo</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='logo']" position="after">
                    <field name="report_header_english"  invisible="1"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>
