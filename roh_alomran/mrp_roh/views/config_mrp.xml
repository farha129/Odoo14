<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_mrp_config_worker_task_form" model="ir.ui.view">
            <field name="name">config.worker.task</field>
            <field name="model">config.worker.task</field>
            <field name="arch" type="xml">
                <form string="Create Task">
                     <sheet>
                        <group>
                            <field name="name" />
                        </group>
                     <group col = '6'>
                          <field name="one_work_in_day"  />

                         <field name="one_work_in_month" />

                          <field name="one_work_in_month"  invisible="1" />
                          <field name="number_worker" />
                           <field name="workers_in_day" />

                            <field name="workers_in_month"  />
                     </group>
                     </sheet>
                </form>
            </field>
        </record>
        <record id="action_view_worker_task_id" model="ir.actions.act_window">
            <field name="name">Configration Tasks</field>
            <field name="res_model">config.worker.task</field>
            <field name="view_mode">tree,form</field>

        </record>

        <menuitem id="menu_config_task_worker" name="Worker Task" parent="mrp.menu_mrp_configuration"
            action="action_view_worker_task_id" groups="base.group_system"/>
    </data>

 <record id="res_config_settings_view_form_roh" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mrp.workorder</field>
        <field name="model">res.config.settings</field>
         <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']" position="inside">
                    <h2>MRP</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div>
                                    <span class="o_form_label">Percent For Mrp Date</span>
                                            <field name="percent_period_date" class="oe_inline"/> %
                                </div>

                                </div>
                        </div>
                    </div>
                </xpath>

        </field>
 </record>
</odoo>
