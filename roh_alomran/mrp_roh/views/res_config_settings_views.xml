<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_inherit_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Manufacturing" string="Manufacturing" data-key="mrp" groups="mrp.group_mrp_manager">

                    <h2>Calculating Number days</h2>
                    <div class="row mt16 o_settings_container">

                            <group col="2">
                                <field name="number_day" style="width:30% !important;"/>
                                <field name="number_meter" style="width:30% !important;"/>
                                <field name="number_worker" style="width:30% !important;"/>

                            </group>
                    </div>
                    </div>
                </xpath>


            </field>
        </record>
    </data>


</odoo>
