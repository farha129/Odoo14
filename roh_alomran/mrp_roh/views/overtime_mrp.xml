<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="overtime_mrp_form" model="ir.ui.view">
            <field name="name">overtime.mrp.form</field>
            <field name="model">overtime.mrp</field>
            <field name="arch" type="xml">
                <form string="Overtime" >
                <header>
                    <button name="action_confirmed" states="draft" string="Confirmed" type="object"   class="oe_highlight"/>
                    <button name="action_cancel"  string="Cancel" type="object"  class="oe_highlight" />
                    <button name="action_done" type="object" string="Done" states="confirmed"  class="oe_highlight"/>
                     <field name="state" widget="statusbar" />


                </header>

                <sheet>
<!--                 <div class="oe_button_box" name="button_box">-->

<!--                    <button name="action_open_purchase_order" type="object" class="oe_stat_button" icon="fa-th-list">-->
<!--                        <div class="o_field_widget o_stat_info">-->
<!--                            <span class="o_stat_value">-->
<!--                                <field name="po_count"/>-->
<!--                            </span>-->
<!--                            <span class="o_stat_text">Purchase</span>-->
<!--                            <span class="o_stat_text">Orders</span>-->
<!--                        </div>-->
<!--                    </button>-->
<!--                 </div>-->

                    <div class="oe_title">

                        <h1>

                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group col = '4'>

                            <field name="customer_id" readonly="1"/>
                            <field name="sale_id" readonly="1"/>
                            <field name="currency_id" groups="base.group_multi_currency" force_save="1" readonly="1"/>
                            <field name="state" invisible="1"/>

                        </group>
                     <group col = '4'>
                         <field name="number_hours_cut" readonly="1"/>
                         <field name="deadline_cut" readonly="1"/>
                         <field name="number_hours_gathering" readonly="1"/>
                         <field name="deadline_gathering" readonly="1"/>
                         <field name="number_hours_glass" readonly="1"/>
                         <field name="deadline_glass" readonly="1"/>
                         <field name="number_hours_install" readonly="1"/>
                         <field name="deadline_install" readonly="1"/>
                     </group>
                    <group>
                       <field name="note" />

                    </group>

                    <notebook>
                        <page string="Lines" name="Lines">
                            <field name="line_ids"
                                widget="section_and_note_one2many">

                                <tree string="Lines" editable="bottom">

                                    <field name="worker_name" />
                                    <field name="number_hour" />
                                    <field name="salary_hour" />
                                    <field name="total_salary" />
                                    <field name="name" />

                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>
    <record id="overtime_mrp_tree" model="ir.ui.view">
            <field name="name">overtime.mrp.tree</field>
            <field name="model">overtime.mrp</field>
            <field name="arch" type="xml">
                <tree decoration-info="state=='draft'" decoration-danger="state == 'done'" decoration-success="state == 'confirmed'" decoration-muted="state == 'cancel'" string="Request" >
                                        <field name="name" />
                                        <field name="customer_id"/>
                                        <field name="number_hours_install" string="Out Factory"/>
                                        <field name="state"/>


                </tree>
            </field>
        </record>

     <record id="overtime_action" model="ir.actions.act_window">
            <field name="name">OverTime MRP</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">overtime.mrp</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No request  found. Let's create one!
              </p>
            </field>
        </record>
        <menuitem action="overtime_action" id="menu_overtime_id"
            parent="mrp.menu_mrp_root"
            sequence="99"/>






    





</odoo>
