<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="install_mrp_form" model="ir.ui.view">
            <field name="name">install.mrp.form</field>
            <field name="model">install.mrp</field>
            <field name="arch" type="xml">
                <form string="install" >
                <header>
                    <button name="action_confirmed" states="draft" string="Confirmed" type="object"   class="oe_highlight"/>
                    <button name="action_done" type="object" string="Done" states="confirmed"  class="oe_highlight"/>
                    <button name="action_cancel"  string="Cancel" type="object"  class="oe_highlight" />
                     <field name="state" widget="statusbar" />

                </header>

                <sheet>


<!--                     <div class="oe_button_box" name="button_box">-->
<!--                            <button class="oe_stat_button" type="action" name="%(action_stock_id)d"-->
<!--                            icon="fa-th-list" string="stock" widget="statinfo"/>-->
<!--                        </div>-->


<!--                 <div class="oe_button_box" name="button_box">-->

<!--                    <button name="action_open_purchase_order" type="object" class="oe_stat_button" icon="fa-th-list">-->
<!--                        <div class="o_field_widget o_stat_info">-->
<!--                            <span class="o_stat_value">-->
<!--                                <field name="po_count"/>-->
<!--                            </span>-->
<!--                            <span class="o_stat_text">Purchase</span>-->
<!--                            <span class="o_stat_text">Orders</span>-->
<!--                        </div>-->
<!--                    </button>-->
<!--                 </div>-->

                    <div class="oe_title">

                        <h1>

                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group col = '4'>

                            <field name="date_order" readonly="1"/>
                            <field name="deadline_install" readonly="1"/>
                            <field name="sale_id" readonly="1"/>
                            <field name="customer_id" readonly="1"/>
                            <field name="address" />
                            <field name="period_install" />

                        </group>
                     <group >
                         <field name="employee_ids"  widget="many2many_tags" />
                             <field name="note" />
                     </group>


                    <notebook>
                        <page string="Material Use" name="lines_use">
                            <field name="material_use_ids"
                                   widget="section_and_note_one2many">
                                <tree string="Lines" editable="bottom">
                                    <field name="product_id" />
                                    <field name="name" />
                                    <field name="product_uom_qty" />
                                    <field name="product_uom" />
                                </tree>
                            </field>

                        </page>

                         <page string="Material Return" name="lines_return">
                            <field name="material_return_ids"
                                   widget="section_and_note_one2many">
                                <tree string="Lines" editable="bottom">
                                    <field name="product_id" />
                                    <field name="name" />
                                    <field name="product_uom_qty" />
                                    <field name="product_uom" />
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>
    <record id="install_mrp_tree" model="ir.ui.view">
            <field name="name">install.mrp.tree</field>
            <field name="model">install.mrp</field>
            <field name="arch" type="xml">
                <tree decoration-info="state=='draft'" decoration-danger="state == 'done'" decoration-success="state == 'confirmed'" decoration-muted="state == 'cancel'" string="Request" >
                                        <field name="date_order" />
                                        <field name="name" />
                                        <field name="customer_id"/>
                                        <field name="sale_id"/>
                                        <field name="deadline_install"/>
                                        <field name="state"/>


                </tree>
            </field>
        </record>

     <record id="install_action" model="ir.actions.act_window">
            <field name="name">Install MRP</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">install.mrp</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No request  found. Let's create one!
              </p>
            </field>
        </record>
        <menuitem action="install_action" id="menu_install_id"
            parent="mrp.menu_mrp_root"
            sequence="70"/>

