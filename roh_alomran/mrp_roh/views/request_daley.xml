<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="request_delay_form" model="ir.ui.view">
            <field name="name">request.delay.form</field>
            <field name="model">request.delay</field>
            <field name="arch" type="xml">
                <form string="Request Delay" >
                <header>
                    <button name="action_confirmed" states="draft" string="Confirmed" type="object"   class="oe_highlight" group ="group_erp_manager"/>
                    <button name="action_reject"  string="Reject" states="draft" type="object"  class="oe_highlight" group ="group_erp_manager" />
                     <field name="state" widget="statusbar" />

                </header>

                <sheet>
                    <div class="oe_title">

                        <h1>

                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group >
                            <field name="date_order" readonly="1"/>
                            <field name="sale_id"/>
                            <field name="customer_id" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                     <group>
                             <field name="reason" />
                     </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>
        <record id="request_delay_fillter" model="ir.ui.view">
            <field name="name">request.delay.select</field>
            <field name="model">request.delay</field>
            <field name="arch" type="xml">
                <search string = 'Search Request'>
                    <field name="customer_id" string="Customer" filter_domain="[('customer_id', 'ilike', self)]"/>
                    <field name="sale_id" string="Sale Order" filter_domain="[('sale_id', 'ilike', self)]"/>

                    <group col="8" colspan="4" expand="0" string="Group By">
                                       <filter string="Date" name="date_order" context="{'group_by': 'date_order'}"/>
                                       <filter string="State" name="state" context="{'group_by': 'state'}"/>
                    </group>

                </search>


            </field>
        </record>


    <record id="request_delay_tree" model="ir.ui.view">
            <field name="name">request.delay.tree</field>
            <field name="model">request.delay</field>
            <field name="arch" type="xml">
                <tree string="Request" >
                                <field name="name" />
                                <field name="date_order" />
                                <field name="customer_id"/>
                                <field name="sale_id"/>
                                <field name="state"/>

                </tree>
            </field>
        </record>

     <record id="request_daley_action_id" model="ir.actions.act_window">
            <field name="name">Request Delay</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">request.delay</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No request  found. Let's create one!
              </p>
            </field>
        </record>
        <menuitem action="request_daley_action_id" id="menu_daley_ids"
            parent="mrp.menu_mrp_root"
            sequence="24"/>

</odoo>
