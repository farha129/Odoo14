<odoo>
	<data>

		<record id="view_mrp_production_task_form" model="ir.ui.view">
            <field name="name">mrp.production.task.wizard</field>
            <field name="model">mrp.production.task.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Task">
                       <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Project Task"/>
                        </h1>
                    </div>
                    <group>
                        <group>
<!--                            <field name="project_id" domain="[('active', '=', True)]" context="{'default_project_id':'project_id'}"/>-->
                            <field name="user_id" class="o_task_user_field" options="{'no_open': True}"/>
                            <field name="task_type"/>
                             <field name="dead_line"/>

                        </group>

                    </group>
                    <footer>
                    	<button name="create_task" string="Create Task" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_mrp_production_task_form" model="ir.actions.act_window">
            <field name="name">Create Task</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.production.task.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_mrp_production_task_form"/>
            <field name="target">new</field>
        </record>

		<record id="action_view_task_id" model="ir.actions.act_window">
            <field name="name">Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">kanban,tree,form,calendar,pivot,graph</field>
             <field name="domain">[('mrp_id', '=', active_id)]</field>
            <field name="context">{'search_default_mrp_id': active_id, 'default_mrp_id': active_id}</field>
            <field name="help" type="html">
                <p>
                    Odoo's project management allows you to manage the pipeline of your tasks efficiently. You can track progress, discuss on tasks, attach documents, etc.
                </p>
            </field>
        </record>


		<record id="mrp_production_inherit_form" model="ir.ui.view">
			<field name="name">mrp.production</field>
			<field name="model">mrp.production</field>
			<field name="inherit_id" ref="mrp.mrp_production_form_view" />
			<field name="arch" type="xml">
			<div name="button_box" position="inside">
				<button class="oe_stat_button" type="action" name="%(action_view_task_id)d"
                        context="{'default_partner_id': partner_id }"
                        icon="fa-tasks">
                        <field  string="Tasks" name="task_number" widget="statinfo"/>
                    </button>
                  </div>
				<button name="action_assign" position="after">
					<button name="%(action_view_mrp_production_task_form)d" string="Create Task" type="action"/>
				</button>
                                                <xpath expr="//page[2]" position="after">
                                                    <page string = "Number Day For Task">
                                                        <group col = '4'>


                                                             <field name="day_number_cut" /><span>Days</span>
                                                             <field name="day_number_gathering" /><span>Days</span>
                                                                 <field name="day_number_glass" /> <span>Days</span>
                                                               <field name="day_number_install" /> <span>Days</span>
                                                        </group>

                                                    </page>

                                                </xpath>

			</field>
		</record>

        <record id="project_task_inherit_form" model="ir.ui.view">
			<field name="name">project.task</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_form2" />
            			<field name="arch" type="xml">
                                <xpath expr="//field[@name='parent_id']" position="before">
                                     <field name="task_type" />
                                </xpath>
                        </field>




        </record>


	</data>
</odoo>

        