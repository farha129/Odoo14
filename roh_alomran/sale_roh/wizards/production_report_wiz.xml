<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="view_wiz_production" model="ir.ui.view">
              <field name="name">Report Production</field>
              <field name="model">production.report.wizard</field>  
              <field name="arch" type="xml">
                <form > 
			<group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="report_type" />

			</group>

                 	<footer>
                   	    <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                   	    <button string="Cancel" special="cancel" class="oe_link"/>
                 	</footer>
                </form>
              </field>
        </record>

        
 <record id="action_wiz_production" model="ir.actions.act_window">
            <field name="name">Report Production</field>
            <field name="res_model">production.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>

        </record>
<menuitem
        id="action_wiz_production_ids"
        name="Production Report"
        parent="mrp.menu_mrp_reporting"

        action="action_wiz_production"
       />
</odoo>
