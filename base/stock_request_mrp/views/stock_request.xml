     <record id="request_action" model="ir.actions.act_window">
            <field name="name">stock.request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.request</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_request_form"/>
<field name="target">new</field>
        </record>
        <menuitem action="request_action" id="menu_request_action"
            parent="mrp.menu_mrp_root"
            sequence="23"/>


    <record id="mrp_production_inherit_form" model="ir.ui.view">
<field name="name">mrp.production</field>
<field name="model">mrp.production</field>
<field name="inherit_id" ref="mrp.mrp_production_form_view"/>
<field name="arch" type="xml">
<div name="button_box" position="inside">
    <button name="get_transaction_stock" string="Stock" type="object"/>

</div>
    <button name="action_cancel" position="after">
    <button name="%(request_action)d" string="Intranal Transfer" type="action"/>
</button>
</field>
