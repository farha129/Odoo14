<odoo>

        <record id="stock_request_form" model="ir.ui.view">
            <field name="name">stock.request.form</field>
            <field name="model">stock.request</field>
            <field name="arch" type="xml">
                <form string="Request" >
<!--                <header>-->
<!--&lt;!&ndash;                    <button name="action_confirmed" states="draft" string="Confirmed" type="object"   class="oe_highlight"/>&ndash;&gt;-->
<!--&lt;!&ndash;                    <button name="action_done" type="object" string="Done" states="confirmed"  class="oe_highlight"/>&ndash;&gt;-->
