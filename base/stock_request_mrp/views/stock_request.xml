<!--                </header>-->

                <sheet>



                    <div class="oe_title">

                        <h1>

                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                                                    <field name="warehouse_id" />

                    </group>

                    <group col = '4'>

                            <field name="location_from" />
                            <field name="location_to" />

                        </group>


                    <notebook>
                       
                         <page string="Request Line" name="request_line_ids">
                            <field name="request_line_ids"
                                   widget="section_and_note_one2many">
                                <tree string="Lines" editable="bottom">
                                    <field name="product_id" />
                                    <field name="name" />
                                    <field name="product_uom_qty" />
                                    <field name="product_uom" />
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
    <footer>
<button name="create_transfer" string="Create" type="object"/>
</footer>
                </form>
            </field>
        </record>
